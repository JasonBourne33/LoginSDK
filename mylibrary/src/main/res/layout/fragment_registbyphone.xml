<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/self_center_icon_width"
                android:layout_height="@dimen/self_center_icon_height"
                android:layout_centerVertical="true"
                android:src="@drawable/game_sdk_user_icon" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_user"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_more_small"
                android:textColorHint="@color/text_hint"
                android:hint="请输入手机号码/用户名/邮箱" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_gay_gay_back" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_pwd"
                android:layout_width="@dimen/self_center_icon_width"
                android:layout_height="@dimen/self_center_icon_height"
                android:layout_centerVertical="true"
                android:src="@drawable/game_sdk_pwd_icon" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_pwd"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_size_more_small"
                android:inputType="textPassword"
                android:textColorHint="@color/text_hint"
                android:hint="请输入密码" />

            <ImageView
                android:id="@+id/img_eye"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et_pwd"
                android:src="@drawable/game_sdk_pwd_eye_icon" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_gay_gay_back" />
        <RelativeLayout
            android:layout_width="@dimen/ll_width_login_dialog"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_sms"
                android:layout_width="@dimen/self_center_icon_width"
                android:layout_height="@dimen/self_center_icon_height"
                android:layout_centerVertical="true"
                android:src="@drawable/game_sdk_sms_icon" />

            <EditText
                android:id="@+id/et_sms"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_sms"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_size_more_small" />

            <TextView
                android:id="@+id/tv_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:background="@drawable/shape_get_sms"
                android:textSize="12sp"
                android:padding="5dp"
                android:src="@drawable/game_sdk_pwd_eye_icon" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_gay_gay_back" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_enter"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/game_sdk_enter_icon"/>
            <TextView
                android:id="@+id/tv_backToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/img_enter"
                android:textSize="@dimen/text_size_more_small"
                android:text="返回登陆" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_login_height"
            android:background="@drawable/game_sdk_button_bg"
            android:textColor="@color/white"
            android:text="完成注册" />

    </LinearLayout>
</RelativeLayout>